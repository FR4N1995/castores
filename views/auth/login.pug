extends ../layout/iniciar-sesion

block contenido
    div(class="py-10")
        h1(class="text-center text-4xl my-10 font-bold capitalize") grupo 
            span(class="font-normal") Castores
        h2(class="text-center text-2xl font-extrabold capitalize")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10 ")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs-text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email 
                        input#nombre.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") password 
                        input#nombre.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")

                    //- .flex.item-center.justify-between
                    //-     a.text-gray-500.text-xs(href="/auth/registro") Login Empleado 
                    //-     a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password   

                    input(class="w-full bg-gray-900 hover:bg-black py-3 text-white font-bold cursor-pointer" type="submit" value="Inisiar Sesion")