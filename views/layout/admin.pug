html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Castores | #{pagina}
        block styles
        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")

    body.min-h-screen.bg-gray-50 
        if(usuario.admin == 1) 
            header(class="bg-gray-950 p-4 md:p-2")
                .container.mx-auto.flex.justify-between.items-center  
                    a(href="/administrador/home") 
                        h1.text-2xl.text-white.font-bold.text-center Grupo 
                            span.font-normal Castores

                    button#menu-toggle(type="button" class="md:hidden text-white text-3xl") 
                        i(class="fas fa-bars")  

            
                    nav#menu(class="my-5 text-sm md:flex md:items-center md:gap-4 font-bold hidden text-white") 
                            a(href='/administrador/home' class="w-full py-3 border-b border-gray-700 md:border-none") productos
                            a(href='/administrador/historial' class="w-full py-3 border-b border-gray-700 md:border-none") Historial
                            form(action="/cerrar-session" method="POST" class="my-2") 
                                input(type="submit" class="bg-red-800 py-2 px-10 rounded cursor-pointer" value="Cerrar Sesion")

                    nav#mobile-menu(class="hidden md:hidden flex flex-col items-center text-white text-lg font-bold text-center bg-gray-900 p-5 w-full fixed inset-0 mt-16 z-50 overflow-y-auto") 
                        a(href='/administrador/home' class="w-full py-3 border-b border-gray-700") productos
                        a(href='/administrador/historial' class="w-full py-3 border-b border-gray-700") Historial
                        form(action="/cerrar-session" method="POST" class="w-full") 
                            input(type="submit" class="bg-red-800 py-3 px-10 rounded cursor-pointer w-full" value="Cerrar Sesión")
                    
        else  

            header(class="bg-gray-950 p-4 md:p-2")
                .container.mx-auto.flex.justify-between.items-center  
                    a(href="/") 
                        h1.text-2xl.text-white.font-bold.text-center Grupos  
                            span.font-normal Castores

                    button#menu-toggle(type="button" class="md:hidden text-white text-3xl") 
                        i(class="fas fa-bars")  

            
                    nav#menu(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold hidden text-white") 
                            a(href='/administrador/home' class="w-full py-3 border-b border-gray-700 md:border-none") Productos
                            form(action="/cerrar-session" method="POST" class="my-2") 
                                input(type="submit" class="bg-red-800 py-2 px-10 rounded cursor-pointer" value="Cerrar Sesion")

                    nav#mobile-menu(class="hidden md:hidden flex flex-col items-center text-white text-lg font-bold text-center bg-gray-900 p-5 w-full fixed inset-0 mt-16 z-50 overflow-y-auto") 
                        a(href='/administrador/home' class="w-full py-3 border-b border-gray-700") productos
                        form(action="/cerrar-session" method="POST" class="w-full") 
                            input(type="submit" class="bg-red-800 py-3 px-10 rounded cursor-pointer w-full" value="Cerrar Sesión")      

                
        main(class="mx-auto mt-10 px-2 container max-w-screen-xl")
                div(class=" py-1 lg:block")
                    div(class="mx-auto flex justify-end")
                        p(class="") Usuario: 
                            span(class="")= usuario.nombre
                block contenido

        block scripts
                script(src="/js/menuHamburguesa.js")